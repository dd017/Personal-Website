<body>
    <div class="container">
        <div class="fact" id="fact">Click the button to get a random fact!</div>
        <button class="btn" onclick="getRandomFact()">New Fact</button>
    </div>

    <script>
        async function getRandomFact() {
            const response = await fetch('/api/random-fact');
            const data = await response.json();
            document.getElementById('fact').textContent = data.fact;
        }
    </script>
